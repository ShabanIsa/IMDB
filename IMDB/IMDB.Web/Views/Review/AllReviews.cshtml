@model ICollection<ReviewViewModel>

@{
    ViewData["Title"] = "AllReviews";
}

<div class="clearfix">

    <div class="row col-md-6">
        <h1 class="movieName">@Model.FirstOrDefault()?.MovieName</h1>
        <h2 class="reviewTitle">
            All Reviews
            @{
                if (this.User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-addReview">Add Review</a>
                }
                else
                {
                    <a class="btn btn-addReview" data-toggle="modal" data-target="#addReviewModal">Add Review</a>
                }
            }
        </h2>

        @{ foreach (var review in Model)
            {
                <div>
                    <div class="reviewUser">
                        User: @review.User | Review Rating: @review.Score (@review.NumberOfVotes votes)
                        @{
                            if (User.IsInRole("Administrator"))
                            {
                                <a class="btn btn-deleteReview" data-toggle="modal" data-target="#delete">Delete</a>
                                <!-- Modal -->
                                <div id="delete" class="modal fade" role="dialog">
                                    <div class="modal-dialog">
                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title">Are you sure to delete this review?</h4>
                                            </div>
                                            <div class="modal-body">
                                                <p>You are about to delete this review, are you sure?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <form asp-area="" asp-controller="Review" asp-action="DeleteReview" method="post">
                                                    <input type="hidden" name="id" value="@review.ReviewID" />
                                                    <input type="hidden" name="action" , value="AllReviews" />
                                                    <input type="hidden" name="controller" value="Review" />
                                                    <input type="hidden" name="movieId" value="@Model.FirstOrDefault().MovieId" />
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown">
                                    <a class="btn btn-rateReview" style="margin-left: 0%">Rate Review</a>
                                    <div id="myDropdown" class="dropdown-content">
                                        @{
                                            for (int i = 1; i <= 10; i++)
                                            {
                                                <form asp-area="" asp-controller="Review" asp-action="RateReview" method="post">
                                                    <input type="hidden" name="id" value="@review.ReviewID" />
                                                    <input type="hidden" name="rate" value="@i" />
                                                    <input type="hidden" name="controller" value="Review" />
                                                    <input type="hidden" name="action" value="AllReviews" />
                                                    <input type="hidden" name="movieId" value="@review.MovieId" />
                                                    <button type="submit" class="rateSubmitButton"><span class="fa fa-star checked" id="a">@i</span></button>
                                                </form>
                                            }
                                        }
                                    </div>
                                </div>
                            }
                            else
                            {
                                if (this.User.Identity.IsAuthenticated)
                                {
                                    if (this.User.Identity.Name == review.User)
                                    {
                                        <a class="btn btn-deleteReview" data-toggle="modal" data-target="#delete">Delete</a>
                                        <!-- Modal -->
                                        <div id="delete" class="modal fade" role="dialog">
                                            <div class="modal-dialog">
                                                <!-- Modal content-->
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title">Are you sure to delete this review?</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>You are about to delete this review, are you sure?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <form asp-area="" asp-controller="Review" asp-action="DeleteReview" method="post">
                                                            <input type="hidden" name="id" value="@review.ReviewID" />
                                                            <input type="hidden" name="action" , value="AllReviews" />
                                                            <input type="hidden" name="controller" value="Review" />
                                                            <input type="hidden" name="movieId" value="@Model.FirstOrDefault().MovieId" />
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="dropdown">
                                            <a class="btn btn-rateReview" style="margin-left: 0%">Rate Review</a>
                                            <div id="myDropdown" class="dropdown-content">
                                                @{
                                                    for (int i = 1; i <= 10; i++)
                                                    {
                                                        <form asp-area="" asp-controller="Review" asp-action="RateReview" method="post">
                                                            <input type="hidden" name="id" value="@review.ReviewID" />
                                                            <input type="hidden" name="rate" value="@i" />
                                                            <input type="hidden" name="movieId" value="@review.MovieId" />
                                                            <input type="hidden" name="controller" value="Review" />
                                                            <input type="hidden" name="action" value="AllReviews" />
                                                            <button type="submit" class="rateSubmitButton"><span class="fa fa-star checked" id="a">@i</span></button>
                                                        </form>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="dropdown">
                                            <a class="btn btn-rateReview" style="margin-left: 0%">Rate Review</a>
                                            <div id="myDropdown" class="dropdown-content">
                                                @{
                                                    for (int i = 1; i <= 10; i++)
                                                    {
                                                        <form asp-area="" asp-controller="Review" asp-action="RateReview" method="post">
                                                            <input type="hidden" name="id" value="@review.ReviewID" />
                                                            <input type="hidden" name="rate" value="@i" />
                                                            <input type="hidden" name="movieId" value="@review.MovieId" />
                                                            <input type="hidden" name="controller" value="Review" />
                                                            <input type="hidden" name="action" value="AllReviews" />
                                                            <button type="submit" class="rateSubmitButton"><span class="fa fa-star checked" id="a">@i</span></button>
                                                        </form>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <a class="btn btn-rateReview" data-toggle="modal" data-target="#rateReviewModal">Rate Review</a>
                                }
                            }
                        }
                    </div>
                    <p></p>
                    <p class="font-italic">@review.Text</p>
                </div>
                <hr />
            }
        }
    </div>
</div>

<!-- Modal -->
<div id="rateReviewModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Want to rate review?</h4>
            </div>
            <div class="modal-body">
                <p>Login if you want to rate review.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="addReviewModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Want to add review to this movie?</h4>
            </div>
            <div class="modal-body">
                <p>Login if you want to add review to this movie.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

