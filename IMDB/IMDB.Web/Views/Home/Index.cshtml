@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/shareImage.jpg" alt="Microsoft Azure" class="img-responsive" style="width: 100%; height:500px;" />
            <div class="carousel-caption" role="option">

                <a asp-controller="Movie" asp-action="Details" asp-route-id="1" class="btn btn-default">
                    View Details
                </a>

            </div>
        </div>
        
        <div class="item">
            <img src="~/images/top-5-IMDB-ranked-movies.jpg" alt="Visual Studio" class="img-responsive" style="width: 100%; height:500px;" />

            <div class="carousel-caption" role="option">

                <a asp-controller="Movie" asp-action="Top5Movies" class="btn btn-default">
                    TOP 5 MOVIES
                </a>

            </div>
        </div>
        <div class="item">
            <img src="~/images/imdb.jpg" alt="ASP.NET" class="img-responsive" style="width: 100%; height:500px;" />
            <div class="carousel-caption" role="option">
                <p>
                    <a asp-controller="Movie" asp-action="Index" class="btn btn-default">
                        Movies
                    </a>
                </p>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


