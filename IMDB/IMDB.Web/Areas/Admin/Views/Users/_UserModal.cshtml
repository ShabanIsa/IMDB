@model UserModalModelView

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title text-center">Manage user</h4>
    </div>
    <div class="modal-body">
        <form asp-area="Admin" asp-controller="Users" asp-action="ChangePassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <input asp-for="ID" class="hidden" name="ID" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Update Password</button>
        </form>
    </div>
    <div class="modal-footer">
        <form asp-area="Admin" asp-controller="Users" asp-action="LockUser" method="post">
            <div>
                <input asp-for="ID" class="hidden" name="ID" />
            </div>
            <button type="submit" class="btn btn-danger navbar-left">Lock User</button>
        </form>
        <form asp-area="Admin" asp-controller="Users" asp-action="UnlockUser" method="post">
            <div>
                <input asp-for="ID" class="hidden" name="ID" />
            </div>
            <button type="submit" class="btn btn-success navbar-left col-xs-offset-1 navbar-left">Unlock User</button>
        </form>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</div>